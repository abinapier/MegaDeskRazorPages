@page
@model MegaDesk.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit Quote";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Quote</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Quote.ID" />
                <div class="form-group">
                    <label asp-for="Quote.Name" class="control-label"></label>
                    <input asp-for="Quote.Name" class="form-control" />
                    <span asp-validation-for="Quote.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.DeskWidth" class="control-label"></label>
                    <input asp-for="Quote.DeskWidth" class="form-control" />
                    <span asp-validation-for="Quote.DeskWidth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.DeskDepth" class="control-label"></label>
                    <input asp-for="Quote.DeskDepth" class="form-control" />
                    <span asp-validation-for="Quote.DeskDepth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.DrawerCount" class="control-label"></label>
                    <input asp-for="Quote.DrawerCount" class="form-control" />
                    <span asp-validation-for="Quote.DrawerCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.DeskSurfaceMaterial" class="control-label"></label>
                    <select asp-for="Quote.DeskSurfaceMaterial" class="form-control"></select>
                    <span asp-validation-for="Quote.DeskSurfaceMaterial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.OrderTime" class="control-label"></label>
                    <input asp-for="Quote.OrderTime" class="form-control" />
                    <span asp-validation-for="Quote.OrderTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
